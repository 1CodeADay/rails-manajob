<div class="flex w-full  h-screen"  data-controller="measurement">
  <input type="hidden" id="swal-clientId" value="<%= @client.id %>">

  <%= render "shared/sidebar" %>

  <div class="flex-grow overflow-auto m-4">

    <div class="client-item w-2/4 min-h-52">
      <a href="/clients/<%= @client.id %>" class="client-item-link py-4">
        <div class="client-item-corner"></div>

        <div class="client-item-title flex justify-evenly items-center">
          <%= cl_image_tag @client.photo.key, height: 300, width: 400, crop: :fill, class: "rounded-full w-10 h-10 object-cover" if @client.photo.key.present? %>

          <div class="client-item-info">
            <span class="client-item-info-sp"><%= @client.first_name %></span>
          </div>

          <div class="client-item-info">
            <span class="client-item-info-sp"><%= @client.last_name %></span>
          </div>
        </div>

        <div class="client-item-info">Phone number :
          <span class="client-item-info-sp"><%= @client.phone_number %></span>
        </div>
        <div class="client-item-info">Address :
          <span class="client-item-info-sp"><%= @client.address %></span>
        </div>
      </a>
    </div>


    <div class="flex flex-wrap justify-evenly">

      <div class="border-gray-400 flex flex-col text-center w-1/4 m-4">
        <button data-action="click->measurement#showPopup" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" > Add Measurement </button>
        <h1>Trousers</h1>
        <table class="min-w-1/3 bg-white border border-gray-200">
          <thead>
            <tr>
              <th class="px-4 py-2 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-600">Title</th>
              <th class="px-4 py-2 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-600">Dimensions</th>
            </tr>
          </thead>
          <tbody>
            <% @measurements.each do |m| %>
