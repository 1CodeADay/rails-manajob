<div class="flex w-full h-screen">
  <%= render "shared/sidebar" %>
  <div class="flex flex-col flex-grow bg-white justify-center items-center" id="client-new">
    <div class="border border-r-gray-500 shadow-lg bg-gold bg-opacity-90 rounded-lg px-14 py-8"> <!-- Added margin-top class -->
      <h2 class=" font-bold pb-5 text-3xl text-center ">Create a new client</h2>
      <%= simple_form_for Client.new do |f|  %>
        <div class="form-inputs flex space-x-5">
          <div>
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first_name", class: "w-full mb-3 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2 focus:border-none" },
                        label_html: { class: "block text-sm mb-1 font-medium text-gray-700" } %>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last_name", class: "w-full mb-3 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2 focus:border-none" },
                        label_html: { class: "block text-sm mb-1 font-medium text-gray-700" } %>
            <%= f.input :phone_number,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "phone_number", class: "w-full mb-3 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2 focus:border-none" },
                        label_html: { class: "block text-sm mb-1 font-medium text-gray-700" } %>
          </div>
          <div>
            <%= f.input :address,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "address", class: "w-full mb-3 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2 focus:border-none" },
                        label_html: { class: "block text-sm mb-1 font-medium text-gray-700" } %>
            <%= f.input :photo, as: :file %>
            
          </div>

        </div>
        <div class="form-actions mt-4">
          <%= f.button :submit, "Create client", class: "w-full mb-4 px-4 py-2 bg-navbar-grey text-gold rounded-md hover:text-black hover:bg-white hover:ring-2 hover:ring-navbar-grey focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2", style: "white-space: normal;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
