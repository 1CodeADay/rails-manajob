<div class="flex w-full h-screen">
  <%= render "shared/sidebar" %>
  <div class="flex flex-col flex-grow bg-white justify-center items-center" id="client-new">
    <div class="border border-r-gray-700 border-t-gray-400 shadow-xl bg-gold bg-opacity-80 rounded-lg px-14 py-10"> <!-- Added margin-top class -->
      <h2 class=" font-bold pb-10 text-3xl text-center ">Create a new client</h2>
      <%= simple_form_for Client.new do |f|  %>
        <div class="form-inputs space-y-5">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: "First Name",
                      input_html: { autocomplete: "first_name", class: "w-full px-4 py-2 border rounded-md hover:ring-1 hover:ring-navbar-grey focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2 focus:border-none" },
                      label_html: { class: "block text-sm mb-1 font-medium text-gray-700" } %>
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: "Last Name",
                      input_html: { autocomplete: "last_name", class: "w-full px-4 py-2 border rounded-md hover:ring-1 hover:ring-navbar-grey focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2 focus:border-none" },
                      label_html: { class: "block text-sm mb-1 font-medium text-gray-700" } %>
          <%= f.input :phone_number,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: "Phone Number",
                      input_html: { autocomplete: "phone_number", class: "w-full px-4 py-2 border rounded-md hover:ring-1 hover:ring-navbar-grey focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2 focus:border-none" },
                      label_html: { class: "block text-sm mb-1 font-medium text-gray-700" } %>

          <%= f.input :address,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: "Address",
                      input_html: { autocomplete: "address", class: "w-full px-4 py-2 border rounded-md hover:ring-1 hover:ring-navbar-grey focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2 focus:border-none" },
                      label_html: { class: "block text-sm mb-1 font-medium text-gray-700" } %>

          <div data-controller="client-upload" style="margin-top: 25px !important;">
            <%= f.input :photo,
              as: :file,
              required: true,
              autofocus: true,
              label: false,
              input_html: { autocomplete: "photo", class: "hidden", id: "photo-upload", 'data-client-upload-target': 'inputc' } %>

            <label for="photo-upload" data-client-upload-target="labelc" class="w-full px-4 py-3 border-2 border-white rounded-md hover:ring-2 hover:ring-navbar-grey hover:border-none cursor-pointer hover:text-white">
              Click to Upload the Client's Picture
            </label>
          </div>

        </div>
        <div class="form-actions mt-4">
          <%= f.button :submit, "Create client", class: "w-full my-2 px-4 py-2 bg-navbar-grey text-gold rounded-md hover:text-black hover:bg-white hover:ring-2 hover:ring-navbar-grey focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2", style: "white-space: normal;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
