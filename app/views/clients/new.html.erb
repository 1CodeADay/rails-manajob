<div class="flex w-full h-screen">
  <%= render "shared/sidebar", class: "h-full"%>
  <div class="flex-grow flex-col h-full bg-white justify-center items-center overflow-scroll" id="client-new">
    <div class="mt-[-60px] max-w-md border-4 border-gold  bg-navbar-grey bg-opacity-50 rounded-lg px-20 py-10"> <!-- Added margin-top class -->
      <h2 class=" font-bold pb-10 text-2xl">Create a new client</h2>
      <%= simple_form_for Client.new do |f|  %>
        <div class="form-inputs space-y-4">
          <div>
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first_name", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2 focus:border-none" },
                        label_html: { class: "block text-sm mb-2 font-medium text-gray-700" } %>
          </div>
          <div>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last_name", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2 focus:border-none" },
                        label_html: { class: "block text-sm mb-2 font-medium text-gray-700" } %>
          </div>
          <div>
            <%= f.input :phone_number,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first_name", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2 focus:border-none" },
                        label_html: { class: "block text-sm mb-2 font-medium text-gray-700" } %>
          </div>
          <div>
            <%= f.input :address,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "address", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2 focus:border-none" },
                        label_html: { class: "block text-sm mb-2 font-medium text-gray-700" } %>
          </div>
          <div>
          <%= f.input :photo, as: :file %>
            <%# <div class="flex items-center justify-center w-full">
                <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-400 border-dashed rounded-lg cursor-pointer bg-white  hover:border-gold">
                    <div class="flex flex-col items-center justify-center pt-5 pb-6">
                        <svg class="w-8 h-8 mb-4 text-gray-500 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
                        </svg>
                        <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span> or drag and drop <br> your photo</p>
                        <p class="text-xs text-gray-500 dark:text-gray-400">SVG, PNG, JPG or GIF (MAX. 800x400px)</p>
                    </div>
                    <input id="dropzone-file" type="file" class="hidden" />
                </label>
            </div>

          </div> %>

        </div>

        <div class="form-actions mt-4">
          <%= f.button :submit, "Create client", class: "w-full mb-4 px-4 py-2 bg-navbar-grey text-gold rounded-md hover:bg-gold hover:text-white hover:ring-2 hover:ring-white focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2", style: "white-space: normal;" %>
        </div>

      <% end %>
    </div>
  </div>

</div>
