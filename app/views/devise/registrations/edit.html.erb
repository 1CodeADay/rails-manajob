<div id="editprofile">
  <div class="flex-col mx-auto text-center w-2/3 lg:w-1/3">
    <h1 class="text-3xl font-extrabold mb-6 mt-3">Profile Edit</h1>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs space-y-4">
        <div>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2 focus:border-none" },
                      label_html: { class: "block text-sm mb-2 font-medium text-gray-700" } %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
        </div>
        <div>
          <%= f.input :password,
                      required: false,
                      hint: "leave it blank if you don't want to change it",
                      input_html: { autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2 focus:border-none" },
                      label_html: { class: "block text-sm mb-2 font-medium text-gray-700" } %>
        </div>
        <div>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2 focus:border-none" },
                      label_html: { class: "block text-sm mb-2 font-medium text-gray-700" } %>
        </div>
        <div>
          <%= f.input :current_password,
                      required: true,
                      hint: "we need your current password to confirm your changes",
                      input_html: { autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2 focus:border-none" },
                      label_html: { class: "block text-sm mb-2 font-medium text-gray-700" } %>
        </div>
      </div>
      <div class="form-actions mt-4">
        <%= f.button :submit, "Update", class: "w-full mb-2 px-4 py-2 bg-navbar-grey text-gold rounded-md hover:bg-gold hover:text-white focus:outline-none focus:ring-2 focus:ring-navbar-grey focus:ring-offset-2", style: "white-space: normal;"%>
      </div>
    <% end %>
    <h3 class="text-1xl font-bold mb-6 mt-3">Want to cancel your account ?</h3>
    <div><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-full mb-4 px-4 py-2 bg-gold text-navbar-grey rounded-md hover:bg-navbar-grey hover:text-white focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2", style: "white-space: normal;"%></div>
    <%= link_to "Back", :back, class: "w-full mb-2 px-4 py-2 bg-gold text-navbar-grey rounded-md hover:bg-navbar-grey hover:text-white focus:outline-none focus:ring-2 focus:ring-gold focus:ring-offset-2", style: "white-space: normal;"%><br><br>
  </div>
</div>
